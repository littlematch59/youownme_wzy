<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_receive">


        <TextView
            android:id="@+id/text_view_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收礼"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    <Spinner
        android:id="@+id/spinner_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_view_reason"
        android:layout_marginStart="6dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/text_view_reason"
        android:entries="@array/array_reason"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/text_view_reason" />
</RelativeLayout>